                    <li><div class="login"><a href="/login">LOGIN</a></div></li>
                </ul>
            </nav>
        </div>
    </div>
    
    <div class="boy">
        <!-- Login form -->
        <form action="/sign_up" method="POST"> <!-- Change action to your signup route -->
            <div class="name1">
                <div class="name">
                    <!-- Input for the user's full name -->
                    <input type="text" name="fullname" class="rounded-input" placeholder="Full Name" required>
                </div>
                <div class="name">
                    <!-- Input for the user's email -->
                    <input type="email" name="email" class="rounded-input" placeholder="Email" required>
                </div>
                <div class="name">
                    <!-- Input for the user's password -->
                    <input type="password" name="password" class="rounded-input" placeholder="Password" required>
                </div>
                <div class="name">
                    <!-- Input for password confirmation -->
                    <input type="password" name="confirm_password" class="rounded-input" placeholder="Confirm Password" required>
                </div>
                <div class="name">
                    <button type="submit" class="btn">Sign Up</button>
                </div>
                
            </div>
        </form>
        
    </div>
